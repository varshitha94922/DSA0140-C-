#include<iostream>
using namespace std;
class shape
{
	public:
		int len,rad;
		void input1()
		{
			cout<<"enter the length of square:";
			cin>>len;
		}
		void input2()
		{
			cout<<"enter the radius of circle:";
			cin>>rad;
		}
		virtual float area()=0;
};
class square:public shape
{
	public:
	 float area()
	{
	return len*len;
    }	
};
class circle:public shape
{
	public:
	 float area()
	{
		return 3.14*rad*rad;
	}
};
int main()
{
	square s;
	circle c;
	s.input1();
	c.input2();
	cout<<"the area of the square is:"<<s.area();
	cout<<"the area of the circle is:"<<c.area();
	return 0;	
}
